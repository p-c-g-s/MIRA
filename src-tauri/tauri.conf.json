{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mira",
  "version": "0.1.0",
  "identifier": "com.melro-io.mira",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "overlay",
        "title": "mira-overlay",
        "width": 1920,
        "height": 1080,
        "x": 0,
        "y": 0,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": false,
        "fullscreen": false,
        "skipTaskbar": true,
        "shadow": false,
        "visible": false
      },
      {
        "label": "toolbar",
        "title": "mira",
        "width": 380,
        "height": 64,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": true,
        "resizable": false,
        "skipTaskbar": false,
        "shadow": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
